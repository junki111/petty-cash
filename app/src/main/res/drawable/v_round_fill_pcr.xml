<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:width="1dp" android:color="@color/teal_200" />
        </shape>
    </item>
    <item android:color="@color/teal_200" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:width="3dp" android:color="@color/teal_200" />
        </shape>
    </item>
</selector>